<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondary</item>
    </style>

    <style name="LightTheme" parent="BaseAppTheme">
    </style>

    <style name="SplashTheme" parent="LightTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/avenir_medium</item>
    </style>

    <style name="ToolbarTitleStyle" parent="TextAppearance.AppCompat.Large.Inverse">
        <item name="fontFamily">@font/avenir_demi</item>
    </style>



    <style name="ProfileImageStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>
</resources>