<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:id="@+id/add_task_actionbar"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/add_task_toolbar">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/new_task"
                android:gravity="center"
                style="@style/ToolbarTitleStyle"
                android:layout_marginEnd="64dp"/>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/add_task_actionbar"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:cardElevation="8dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Personal"
                    android:layout_marginHorizontal="16dp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/avenir_demi"
                    android:textSize="20sp"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="16dp"
                    android:background="@drawable/chip_background"
                    android:id="@+id/task_tag"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/title"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/outlined_background"
                    android:paddingHorizontal="8dp"
                    android:textSize="20sp"
                    android:layout_marginTop="16dp"
                    android:id="@+id/task_title"
                    android:fontFamily="@font/avenir_medium"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/description"
                        android:fontFamily="@font/avenir_demi"
                        android:textColor="#353535"
                        android:textSize="20sp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/outlined_background"
                        android:id="@+id/task_description"
                        android:layout_marginTop="8dp"
                        android:textSize="20sp"
                        android:padding="8dp"
                        android:minHeight="128dp"
                        android:gravity="top"
                        android:fontFamily="@font/avenir_medium"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/due_date"
                        android:fontFamily="@font/avenir_demi"
                        android:textColor="#353535"
                        android:textSize="20sp"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/anytime"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/colorSecondary"
                        android:id="@+id/due_date_button"/>

                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/add_task"
                    android:textAllCaps="false"
                    android:fontFamily="@font/avenir_demi"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:id="@+id/add_task_btn" />

            </LinearLayout>

        </ScrollView>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>